<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@android:color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.improve.latetrain.AddMinsFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
            android:id="@+id/minLateEt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addMinBtn"
            android:layout_marginTop="16dp"
            android:minWidth="70dp"
            android:backgroundTint="#0b79c4"
            android:inputType="number"
            android:textColorHint="#0b79c4"
            android:hint="בכמה זמן הרכבת מתעכבת?"/>



    <Spinner
            android:id="@+id/destinationStationSp"
            android:textColorHint="#0b79c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/minLateEt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="#0b79c4"
            android:textAlignment="textStart"/>

    <Button
            android:id="@+id/addMinBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/round_shape"
            android:text="דווח!"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
