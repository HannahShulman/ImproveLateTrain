<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        tools:context=".fragments.HistoryFragment">


    <Button
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/date_btn_fh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/graph_view_fh"
            android:text="@string/define_date_fh"
            android:background="@drawable/send_shape"
            android:textColor="@android:color/white"
            android:textSize="20sp"
    />

    <com.jjoe64.graphview.GraphView
            android:id="@+id/graph_view_fh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/date_btn_fh"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>